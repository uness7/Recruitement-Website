

{% extends '/base.html.twig' %}

{% block body %}
    <body>
        <nav class="navbar navbar-dark bg-dark navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand">Recruitment</a>
            <button class="navbar-toggler"
                    type="button"
                    data-bs-popper="collpase"
                    data-bs-target="#navmenu"
            >
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navmenu">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item text-center">
                        <span class="text-light btn btn-hover">Youness Zioual</span>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_logout') }}" class="text-light btn btn-hover">
                            <i class="bi bi-box-arrow-right"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <section class="my-5 p-5 text-black">
        <div class="container min-vh-100">
{#            // min-vh-100 makes the container to take the whole page#}
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <h1>Applications for this post</h1>
                    </div>
                </div>
                <div class="card-body">
                    {% if applications|length == 0 %}
                        <p>There are no applications yet!</p>
                    {% else %}
                        {% for app in applications %}
                            <div>
                                <h2>{{ app.applicantName }}</h2>
                                <p><strong>Email: </strong>{{ app.applicantEmail }}</p>
                                <p><strong>Phone Number: </strong>{{ app.applicantPhoneNumber }}</p>
                                <p><strong>Resume: </strong>
                                    <a href="{{ path('app_recruiters_display_resume', { 'jobListingId' : app.jobListingId.id, 'applicationId': app.id } ) }}" class="link-dark">View</a>
                                </p>
                                <p><strong>Cover Letter: </strong>
                                    <a href="{{ path('app_recruiters_display_coverLetter', { 'jobListingId': app.jobListingId.id, 'applicationId': app.id }) }}" class="link-dark disabled">View</a></p>
                                <p><strong>Submitted At: </strong>{{ app.submittdAt | date('Y-m-d') }}</p>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </section>

    <footer class="bg-dark p-3">
            <div class="container">
                <div class="d-flex text-black justify-content-between  text-center">
                    <div>
                        <p class="text-muted m-2">Copy rights are reserved 2023</p>
                    </div>
                    <div>
                        <p class="text-muted m-2">Created In Casablanca With <i class="bi bi-heart-fill text-danger"></i> </p>
                    </div>
                    <div>
                        <a href="http://www.linkedin.com/in/younes-zioual-a739ba244/" class="btn btn-dark text-light" target="_blank">
                            <i class="bi bi-linkedin"></i>
                        </a>
                        <a href="http://www.github.com/uness7" class="btn btn-dark text-light" target="_blank">
                            <i class="bi bi-github"></i>
                        </a>
                        <a href="http://www.instagram.com/waiziiii" class="btn btn-dark text-light" target="_blank">
                            <i class="bi bi-instagram"></i>
                        </a>

                    </div>
                </div>
            </div>
        </footer>
    </body>
{% endblock %}



