{% extends 'base.html.twig' %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('Style/style_registeration_page.css') }}">
    <h1>Register</h1>

    {{ form_start(registrationForm) }}

    <h2>User Information</h2>
    {{ form_row(registrationForm.firstName) }}
    {{ form_row(registrationForm.lastName) }}
    {{ form_row(registrationForm.email) }}
    {{ form_row(registrationForm.plainPassword) }}
    {{ form_row(registrationForm.userType) }}

    {% if registrationForm.userType.vars.value == 'candidate' %}
        <h2>Candidate Information</h2>
        {{ form_row(candidateForm.resume) }}
        {{ form_row(candidateForm.coverLetter) }}
    {% endif %}

    {% if registrationForm.userType.vars.value == 'recruiter' %}
        <h2>Recruiter Information</h2>
        {{ form_row(recruiterForm.companyName) }}
        {{ form_row(recruiterForm.companyAddress) }}
    {% endif %}
    <button type="submit" class="btn">Register</button>
    <p>If you already have an account <a href="{{ path('app_login') }}"> sign in</a> </p>
    {{ form_end(registrationForm) }}
{% endblock %}
