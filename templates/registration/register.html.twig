{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        .btn-submit {
            background-color: #6096C3;
            color: #FFFFFF;
            margin-left: 200px;
        }
    </style>
{% endblock %}

{% block body %}

    <div class="container">
        <div class="col-md-6 offset-3">
            <div class="card mt-5">
                <div class="card-header">
                    <h2>Create Your Account: </h2>
                </div>
                <div class="card-body">
                    {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.firstName, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_row(registrationForm.lastName, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_row(registrationForm.email, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_row(registrationForm.plainPassword, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_row(registrationForm.userType, { 'attr': {'class': 'form-select'} }) }}

                    <button type="submit" class="btn btn-submit mt-2 mb-2">Register</button>
                    <div class="card-footer">
                        <p>If you already have an account <a href="{{ path('app_login') }}">sign in</a> </p>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
